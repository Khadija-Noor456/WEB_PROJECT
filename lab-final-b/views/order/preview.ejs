<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Order Preview</title>
</head>
<body>
  <div class="page-header">
    <h1>Order Preview</h1>
  </div>

  <% let subtotal = 0; cart.forEach(item => { subtotal += item.price * item.quantity; }); %>
  <% let total = locals.discount ? subtotal - discount : subtotal; %>

  <% if (locals.couponApplied) { %>
    <div class="info-box">✅ Coupon "SAVE10" applied!</div>
  <% } else { %>
    <div class="coupon-form">
      <form method="POST" action="/order/preview">
        <input type="text" name="coupon" placeholder="Enter coupon code" required>
        <button type="submit" class="btn btn-primary">Apply Coupon</button>
      </form>
    </div>
  <% } %>

  <h2>Cart Items</h2>
  <% cart.forEach(item => { %>
    <div class="cart-item">
      <h3 class="product-title"><%= item.name %></h3>
      <p class="product-price">$<%= item.price.toFixed(2) %> × <%= item.quantity %></p>
      <p class="product-price">Total: $<%= (item.price * item.quantity).toFixed(2) %></p>
    </div>
  <% }) %>

  <div class="summary">
    <h3>Subtotal: $<%= subtotal.toFixed(2) %></h3>
    <% if (discount > 0) { %>
      <p style="color: var(--accent)">Discount: -$<%= discount.toFixed(2) %></p>
    <% } %>
    <h2>Total: $<%= total.toFixed(2) %></h2>
  </div>

  <form method="POST" action="/order/confirm<%= locals.couponApplied ? '?coupon=SAVE10' : '' %>">
    <div class="form-group">
      <label>Email *</label>
      <input type="email" name="email" required>
    </div>
    <div class="form-group">
      <label>Address</label>
      <input type="text" name="address">
    </div>
    <div class="form-group">
      <label>Phone</label>
      <input type="text" name="phone">
    </div>

    <div class="product-actions">
      <a href="/cart" class="btn btn-secondary">Back to Cart</a>
      <button type="submit" class="btn btn-primary">Confirm Order</button>
    </div>
  </form>
</body>
</html>
