<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>My Orders</title>
</head>
<body>
  <div class="page-header">
    <h1>My Orders</h1>
  </div>

  <div class="coupon-form">
    <form method="POST" action="/order/my-orders">
      <label>Enter your email:</label>
      <input type="email" name="email" value="<%= email || '' %>" required>
      <button type="submit" class="btn btn-primary">Search Orders</button>
    </form>
  </div>

  <% if (orders) { %>
    <% if (orders.length === 0) { %>
      <p style="text-align: center;">No orders found for this email.</p>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="order-card">
          <p><strong>Order ID:</strong> <%= order._id %></p>
          <p><strong>Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %></p>
          <p>Status: <span class="status status-<%= order.status.toLowerCase() %>"><%= order.status %></span></p>

          <h4>Items:</h4>
          <% order.items.forEach(item => { %>
            <p><%= item.productName %> (× <%= item.quantity %>) - $<%= item.totalPrice.toFixed(2) %></p>
          <% }) %>

          <h3>Total: $<%= order.total.toFixed(2) %></h3>
        </div>
      <% }) %>
    <% } %>
  <% } %>

  <p style="text-align: center; margin-top: 20px;">
    <a href="/" class="btn btn-secondary">← Back to Home</a>
  </p>
</body>
</html>
