<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css">
    <title>Your Cart</title>
</head>
<body>
    <h1>Shopping Cart</h1>
    <% cart.forEach(item => { %>
        <div class="cart-item">
            <h3><%= item.name %></h3>
            <p>$<%= item.price %> x <%= item.quantity %></p>
            <p><strong>$<%= item.price * item.quantity %></strong></p>
        </div>
    <% }) %>

    <div class="summary">
        <a href="/order/preview" class="btn btn-primary">Proceed to Checkout</a>
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</body>
</html>