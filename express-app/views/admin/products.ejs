<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-3 mb-3 border-bottom">
    <h1 class="h2">Products Management</h1>
    <a href="/admin/products/add" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Product
    </a>
</div>

<!-- Products Table -->
<div class="card">
    <div class="card-body">
        <% if (products.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Featured</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td>
                                    <% if (product.image) { %>
                                        <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                    <% } else { %>
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    <% } %>
                                </td>
                                <td><strong><%= product.name %></strong></td>
                                <td><span class="badge bg-secondary"><%= product.category %></span></td>
                                <td>$<%= product.price.toFixed(2) %></td>
                                <td>
                                    <span class="badge <%= product.stock > 0 ? 'bg-success' : 'bg-danger' %>">
                                        <%= product.stock %>
                                    </span>
                                </td>
                                <td>
                                    <% if (product.featured) { %>
                                        <span class="badge bg-success">Yes</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">No</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/product/<%= product._id %>" class="btn btn-outline-primary" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="/admin/products/delete/<%= product._id %>" class="btn btn-outline-danger" 
                                           onclick="return confirm('Are you sure you want to delete this product?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Product pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/products?page=<%= i %>&limit=<%= limit %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-box text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No products found</h4>
                <p class="text-muted">Get started by adding your first product</p>
                <a href="/admin/products/add" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add Your First Product
                </a>
            </div>
        <% } %>
    </div>
</div>
