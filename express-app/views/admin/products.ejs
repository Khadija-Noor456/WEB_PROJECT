<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Admin Panel</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <%- include('../partials/admin-sidebar') %>

    <main class="admin-main">
      <header class="admin-header">
        <h1><%= title %></h1>
        <div class="header-actions">
          <span class="user-info">üë§ Admin User</span>
        </div>
      </header>

      <div class="admin-content">
        <div class="products-page">
          <div class="page-header">
            <h2>All Products (<%= totalProducts %>)</h2>
            <a href="/admin/products/add" class="btn btn-primary">‚ûï Add New Product</a>
          </div>

          <% if (locals.success) { %>
            <div class="alert alert-success"><%= success %></div>
          <% } %>

          <div class="products-table">
            <table>
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Price</th>
                  <th>Stock</th>
                  <th>Rating</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(product => { %>
                  <tr>
                    <td>
                      <img src="<%= product.image %>" alt="<%= product.name %>" class="product-thumb">
                    </td>
                    <td>
                      <strong><%= product.name %></strong>
                      <% if (product.featured) { %>
                        <span class="badge badge-featured">Featured</span>
                      <% } %>
                    </td>
                    <td><%= product.category %></td>
                    <td>$<%= product.price.toFixed(2) %></td>
                    <td>
                      <span class="<%= product.stock > 10 ? 'stock-good' : product.stock > 0 ? 'stock-low' : 'stock-out' %>">
                        <%= product.stock %>
                      </span>
                    </td>
                    <td>‚≠ê <%= product.rating %></td>
                    <td class="actions">
                      <a href="/admin/products/view/<%= product._id %>" class="btn-action btn-view" title="View">üëÅÔ∏è</a>
                      <a href="/admin/products/edit/<%= product._id %>" class="btn-action btn-edit" title="Edit">‚úèÔ∏è</a>
                      <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn-action btn-delete" title="Delete">üóëÔ∏è</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div class="pagination">
              <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="btn-pagination">‚Üê Previous</a>
              <% } %>
              
              <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
              
              <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="btn-pagination">Next ‚Üí</a>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
