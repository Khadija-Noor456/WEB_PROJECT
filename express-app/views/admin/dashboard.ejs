<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Admin Panel</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <%- include('../partials/admin-sidebar') %>

    <main class="admin-main">
      <header class="admin-header">
        <h1><%= title %></h1>
        <div class="header-actions">
          <span class="user-info">üë§ Admin User</span>
        </div>
      </header>

      <div class="admin-content">
        <div class="dashboard">
          <!-- Stats Cards -->
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-icon blue">üì¶</div>
              <div class="stat-info">
                <h3><%= totalProducts %></h3>
                <p>Total Products</p>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon green">üìä</div>
              <div class="stat-info">
                <h3><%= totalStock %></h3>
                <p>Total Stock</p>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon purple">üè∑Ô∏è</div>
              <div class="stat-info">
                <h3><%= categories.length %></h3>
                <p>Categories</p>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon orange">‚≠ê</div>
              <div class="stat-info">
                <h3>4.7</h3>
                <p>Avg Rating</p>
              </div>
            </div>
          </div>

          <!-- Categories Breakdown -->
          <div class="dashboard-section">
            <h2>Products by Category</h2>
            <div class="category-grid">
              <% categories.forEach(cat => { %>
                <div class="category-card">
                  <h4><%= cat._id %></h4>
                  <p><%= cat.count %> products</p>
                </div>
              <% }) %>
            </div>
          </div>

          <!-- Recent Products -->
          <div class="dashboard-section">
            <h2>Recent Products</h2>
            <div class="recent-products">
              <% recentProducts.forEach(product => { %>
                <div class="recent-product-item">
                  <img src="<%= product.image %>" alt="<%= product.name %>">
                  <div class="product-info">
                    <h4><%= product.name %></h4>
                    <p>$<%= product.price.toFixed(2) %> ‚Ä¢ Stock: <%= product.stock %></p>
                  </div>
                  <a href="/admin/products/edit/<%= product._id %>" class="btn-small">Edit</a>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>